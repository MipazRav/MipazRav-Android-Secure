<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="com.mipazrav.mipazrav:font">fonts/TrajanPro-Regular.ttf</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00A0DC</item>
        <item name="android:textSize">15sp</item>
        <item name="android:onClick">button_listener</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="links_button" parent="@android:style/Widget.Button">
        <item name="com.mipazrav.mipazrav:font">fonts/TrajanPro-Regular.ttf</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00A0DC</item>
        <item name="android:textSize">15sp</item>
        <item name="android:onClick">links_button_listener</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="download_stream_button" parent="@android:style/Widget.Button">
        <item name="com.mipazrav.mipazrav:font">fonts/TrajanPro-Regular.ttf</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonStyle">?android:borderlessButtonStyle</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#00A0DC</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="send_email_button" parent="@android:style/Widget.Button">
        <item name="com.mipazrav.mipazrav:font">fonts/TrajanPro-Regular.ttf</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/sendbutton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="android:label">tzvi</item>
    </style>

</resources>
